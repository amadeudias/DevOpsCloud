{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "/api/articles/([^/]+)",
      "dest": "/api/articles/[slug].js"
    },
    {
      "src": "/api/articles",
      "dest": "/api/articles.js"
    },
    {
      "src": "/api/categories/([^/]+)",
      "dest": "/api/categories/[slug].js"
    },
    {
      "src": "/api/categories",
      "dest": "/api/categories.js"
    },
    {
      "src": "/api/author",
      "dest": "/api/author.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}